{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="card bg-light">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_row(form.query) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.createdThisMonth) }}
                    <button class="btn btn-primary">Chercher</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {% if paginate is not empty %}
                <h1>Search result {{ paginate.totalItemCount }}</h1>
                <ul class="list-group my-4">
                    {% for item in pagination %}
                        <li class="list-group-item list-group-item-action">
                            {{ item['titleModif']|raw}} {{ item['category'] }} {{ item['createdAt']|date('d-m-Y') }}
                        </li>
                    {% endfor %}
                </ul>
                {{ knp_pagination_render(paginate, null, {}, {'align': 'center'}) }}
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
